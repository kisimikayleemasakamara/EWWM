@model IEnumerable<WasteMangement.Models.collectionSite>
@using WasteMangement.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DistrictAdminDashboard.cshtml";
    wwmDbEntities db = new wwmDbEntities();
    var dId = 0;
    string dname = "";
    string userID = User.Identity.GetUserId();
    var distId = (from a in db.districts
                  join b in db.districtAdmins on a.districtAdminId equals b.districtAdminId
                  where b.isDeleted == 0 && a.isDeleted == 0
                  && b.UserId == userID
                  select new
                  {
                      a.districtsId,
                      a.name
                  }).SingleOrDefault();
    if (distId != null)
    {
        dId = distId.districtsId;
        dname = distId.name;
    }
}
@if (dId != 0)
{
<div class="limiter">
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table100">
                <div class="row">
                    <div class="col-md-3 pull-left">
                        <button class="btn btn-dark" data-toggle="modal" data-target="#addSite" style="color:white;font-size:medium">Add Collection Site</button>
                    </div>
                </div>


                <table class="table table-hover">
                    <thead style="background-color:ghostwhite">
                        <tr>
                            <th class="text-center">Site Name</th>
                            <th class="text-center">Site Manager</th>
                            <th class="text-center">Site Number</th>
                            <th class="text-center">Site Description</th>
                            <th class="text-center">Community Name</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="edit" id="detail">
                                <td class="text-center">@item.collectionSiteName</td>
                                <td class="text-center">@item.collectionSiteManager</td>
                                <td class="text-center">@item.collectionSiteNumber</td>
                                @if (item.collectionSiteDescription.Length >= 10)
                                {
                                    <td class="text-center">@item.collectionSiteDescription.Substring(0, 10)....</td>
                                }
                                else
                                {
                                    <td class="text-center">@item.collectionSiteDescription</td>
                                }
                                <td class="text-center">@item.communityName</td>
                                <td class="text-center">
                                    <button class="btn btn-info" data-toggle="modal" data-target="#editSite @item.collectionSiteId">Edit</button> |
                                    <button class="btn btn-primary" data-toggle="collapse" data-target="#detailSite @item.collectionSiteId">Details</button> |
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#delSite @item.collectionSiteId">Delete</button>
                                </td>
                            </tr>
                            <tr id="detailSite @item.collectionSiteId" class="collapse" style="background-color: skyblue;color:black;">
                                <td colspan="9">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h3>Details</h3>
                                            @item.collectionSiteDescription
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <div class="modal fade" id="delSite @item.collectionSiteId" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header" style="background-color:#061435;">
                                            <center><h4 class="modal-title" style="text-align: center;font-weight: 700;color: white;">Delete Collection Site (@dname)</h4></center>
                                            <button type="button" class="close" data-dismiss="modal" style="color: white;opacity: 1;">&times;</button>

                                        </div>
                                        <div class="modal-body">
                                            <form method="POST" action="@Url.Action("Delete", "collectionSites", new { id = item.collectionSiteId })">
                                                @Html.AntiForgeryToken()
                                                <div class="form-group">
                                                    <label class="control-label">&nbsp;&nbsp;&nbsp;Are you Sure you Want to delete the Site?</label>
                                                </div>
                                                <div class="modal-footer">
                                                    <input type="submit" value="Sure!" class="btn btn-primary" />
                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Not Sure</button>
                                                </div>

                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>

                               

                                <div class="modal fade" id="editSite @item.collectionSiteId" role="dialog">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header" style="background-color:#061435;">
                                                <h4 class="modal-title" style="text-align: center;font-weight: 700;color: white;">Edit Collection Site (@dname)</h4>
                                                <button type="button" class="close" data-dismiss="modal" style="color: white;opacity: 1;">&times;</button>

                                            </div>
                                            <div class="modal-body">
                                                <form method="POST" action="@Url.Action("Edit", "collectionSites")">
                                                    @Html.AntiForgeryToken()
                                                    @if (ViewBag.communities != null)
                                                    {
                                                        <div class="form-group">
                                                            <label class="control-label">&nbsp;&nbsp;&nbsp;Select Cmmunity</label>
                                                            <select name="communitiesId" class="form-control" required>
                                                                @foreach (var item1 in ViewBag.communities)
                                                                {
                                                                    <option value="@item1.communitiesId">@item1.name</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    }
                                                    <div class="form-group">
                                                        <label class="control-label">&nbsp;&nbsp;&nbsp;Site Name</label>
                                                        <input name="collectionSiteName" class="form-control" type="text" value="@item.collectionSiteName" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label">&nbsp;&nbsp;&nbsp;Site Number</label>
                                                        <input name="collectionSiteNumber" class="form-control" type="number" value="@item.collectionSiteNumber" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label">&nbsp;&nbsp;&nbsp;Site Manager</label>
                                                        <input name="collectionSiteManager" class="form-control" type="text" value="@item.collectionSiteManager" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label">&nbsp;&nbsp;&nbsp;Site Description</label>
                                                        <textarea rows="4" cols="61" name="collectionSiteDescription" class="form-control" required>@item.collectionSiteDescription</textarea>
                                                    </div>
                                                    <input name="collectionSiteId" value="@item.collectionSiteId" type="hidden" />
                                                    <div class="modal-footer">
                                                        <input type="submit" value="Update Site" class="btn btn-primary" />
                                                    </div>

                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                        }
                    </tbody>
                    <div class="modal fade" id="addSite" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header" style="background-color:#061435;">
                                    <h4 class="modal-title" style="text-align:center;font-weight: 700;color: white;">Add Collection Site (@dname)</h4>
                                    <button type="button" class="close" data-dismiss="modal" style="color: white;opacity: 1;">&times;</button>

                                </div>
                                <div class="modal-body">
                                    <form action="@Url.Action("Create", "collectionSites")" method="post">
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @if (ViewBag.communities != null)
                                        {
                                            <div class="form-group">
                                                <label class="control-label">&nbsp;&nbsp;&nbsp;Select Cmmunity</label>
                                                <select name="communitiesId" class="form-control" required>
                                                    @foreach (var item1 in ViewBag.communities)
                                                    {
                                                        <option value="@item1.communitiesId">@item1.name</option>
                                                    }
                                                </select>
                                            </div>
                                        }
                                        <div class="form-group">
                                            <label class="control-label">&nbsp;&nbsp;&nbsp;Site Name</label>
                                            <input name="collectionSiteName" class="form-control" type="text" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">&nbsp;&nbsp;&nbsp;Site Number</label>
                                            <input name="collectionSiteNumber" class="form-control" type="number" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">&nbsp;&nbsp;&nbsp;Site Manager</label>
                                            <input name="collectionSiteManager" class="form-control" type="text" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">&nbsp;&nbsp;&nbsp;Site Description</label>
                                            <textarea rows="4" cols="61" name="collectionSiteDescription" class="form-control" required></textarea>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="submit" value="Add Site" class="btn btn-primary" />
                                        </div>

                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>

            </div>
        </div>
    </div>
</div>
}
else
{
    <div class="alert alert-warning">
        <strong>Sorry!</strong> You have not assigned district yet.
    </div>
}
