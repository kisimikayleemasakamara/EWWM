@model IEnumerable<WasteMangement.Models.collectionSite>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.collectionSiteManager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.collectionSiteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.collectionSiteNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.collectionSiteDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.community.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.collectionSiteManager)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.collectionSiteName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.collectionSiteNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.collectionSiteDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.community.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.collectionSiteId }) |
            @Html.ActionLink("Details", "Details", new { id=item.collectionSiteId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.collectionSiteId })
        </td>
    </tr>
}

</table>
